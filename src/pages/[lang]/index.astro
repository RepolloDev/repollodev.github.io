---
import type { GetStaticPaths } from "astro";
import Layout from "@/components/Layout.astro";
import Hero from "@/components/sections/Hero.astro";
import { languages, type Language } from "@/i18n/lang";
import { useTranslations } from "@/i18n/utils";

export const getStaticPaths = (() => {
  return Object.keys(languages).map((lang: Language) => ({
    params: { lang },
  }));
}) satisfies GetStaticPaths;

const { lang } = Astro.params;
const t = useTranslations(lang as Language);
const homeTitle = t("home.title") as string;
const homeDescription = t("home.description") as string;
---

<Layout title={homeTitle} description={homeDescription} lang={lang}>
  <Hero lang={lang} />
</Layout>
